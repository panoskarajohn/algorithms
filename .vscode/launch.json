{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug algorithms tests (LLDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/algorithms",
            "args": [
                "--gtest_filter=ContainsDuplicates.*"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "internalConsoleOptions": "openOnSessionStart",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            //"preLaunchTask": "Build Debug Target"
        }
    ]
}